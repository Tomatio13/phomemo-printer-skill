{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Phomemo Layout Job",
  "type": "object",
  "required": ["canvas", "layers", "output"],
  "properties": {
    "canvas": {
      "type": "object",
      "required": ["font_path"],
      "properties": {
        "font_path": { "type": "string", "minLength": 1 },
        "fallback_fonts": { "type": "array", "items": { "type": "string" } },
        "background_color": { "type": "string" },
        "margin": { "type": "number", "minimum": 0 },
        "line_spacing": { "type": "number", "minimum": 0.5 },
        "wrap_style": { "type": "string", "enum": ["word", "character"] },
        "height": { "type": "number", "minimum": 1 },
        "emoji": { "type": "object" }
      },
      "additionalProperties": true
    },
    "layers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "type": "string", "enum": ["text", "image"] },
          "text": { "type": "string" },
          "text_file": { "type": "string" },
          "font_path": { "type": "string" },
          "font_size": { "type": "number", "minimum": 6 },
          "line_spacing": { "type": "number", "minimum": 0.5 },
          "width": { "type": "number", "minimum": 1 },
          "position": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            },
            "additionalProperties": false
          },
          "path": { "type": "string" },
          "max_width": { "type": "number", "minimum": 1 },
          "max_height": { "type": "number", "minimum": 1 },
          "scale": { "type": "number", "exclusiveMinimum": 0 },
          "opacity": { "type": "number", "minimum": 0, "maximum": 1 },
          "stroke": {
            "type": "object",
            "properties": {
              "width": { "type": "number", "minimum": 0 },
              "color": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "text" } } },
            "then": {
              "anyOf": [
                { "required": ["text"] },
                { "required": ["text_file"] }
              ]
            }
          },
          {
            "if": { "properties": { "type": { "const": "image" } } },
            "then": { "required": ["path"] }
          }
        ],
        "additionalProperties": true
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "path": { "type": "string" },
        "send_to_printer": { "type": "boolean" },
        "threshold": { "type": "number", "minimum": 1, "maximum": 255 },
        "slice_height": { "type": "number", "minimum": 100 },
        "chunk_rows": { "type": "number", "minimum": 1, "maximum": 256 }
      },
      "required": ["send_to_printer"],
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
